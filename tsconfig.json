{
  "compilerOptions": {
    "target": "ES2019",
    "module": "es2015",
    "lib": ["esnext", "DOM"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "removeComments": true,
    // "extendedDiagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["**/*.ts"],
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "**/dist",
    "jest.config.ts"
  ]
}
